> chmod 755 ~/.ssh


> echo 'ssh-rsa  label' > /home/jenkins/.ssh/authorized_keys


>  chmod 644 ~/.ssh/authorized_keys


> exit


> sudo docker commit f098b5830556 jenkins-test-cred



